{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 10,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "./src/**/__fixtures__/**.ts",
    "./src/**/__tests__/**.ts",
    "./src/**/__mocks__/**.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
